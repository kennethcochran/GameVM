{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "clean-test-results",
      "command": "dotnet",
      "args": ["clean"]
    },
    {
      "name": "run-tests-with-coverage",
      "command": "dotnet",
      "args": [
        "test"
      ]
    },
    {
      "name": "validate-crap-scores",
      "command": "dotnet",
      "args": [
        "husky",
        "exec",
        ".husky/csx/crap-gate.csx",
        "--args",
        "TestResults/crap-check",
        "30"
      ]
    }
  ]
}
